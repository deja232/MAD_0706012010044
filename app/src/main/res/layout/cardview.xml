<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/dsb"
        app:cardCornerRadius="19dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="84dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/inputannama"
                android:layout_width="294dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:hint="Name"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/unputanumur"
                android:layout_width="293dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:hint="Age"
                app:layout_constraintEnd_toEndOf="@+id/inputannama"
                app:layout_constraintStart_toStartOf="@+id/inputannama"
                app:layout_constraintTop_toBottomOf="@+id/inputannama" />

            <TextView
                android:id="@+id/inputanalamat"
                android:layout_width="293dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:hint="Address"
                app:layout_constraintEnd_toEndOf="@+id/unputanumur"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/unputanumur"
                app:layout_constraintTop_toBottomOf="@+id/unputanumur" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>