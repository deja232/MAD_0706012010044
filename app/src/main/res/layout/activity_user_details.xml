<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="         User Details"
        app:titleTextColor="@color/dg" />

    <ImageView
        android:id="@+id/kembali"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="179dp"
        android:layout_height="159dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/namauser"
        android:layout_width="169dp"
        android:layout_height="29dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="406dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="@color/blu"
        android:text="  Age"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/namauser"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/namauser"
        app:layout_constraintTop_toBottomOf="@+id/namauser" />

    <TextView
        android:id="@+id/umuruser"
        android:layout_width="404dp"
        android:layout_height="32dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="403dp"
        android:layout_height="30dp"
        android:background="@color/blu"
        android:text="  Address"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/umuruser"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/umuruser"
        app:layout_constraintTop_toBottomOf="@+id/umuruser" />

    <TextView
        android:id="@+id/alamatuser"
        android:layout_width="405dp"
        android:layout_height="29dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/deletee"
        android:layout_width="70dp"
        android:layout_height="47dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="@+id/alamatuser"
        app:layout_constraintTop_toBottomOf="@+id/alamatuser"
        app:srcCompat="@drawable/delete" />

    <ImageView
        android:id="@+id/editt"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/deletee"
        app:layout_constraintTop_toBottomOf="@+id/alamatuser"
        app:srcCompat="@drawable/edit" />

</androidx.constraintlayout.widget.ConstraintLayout>